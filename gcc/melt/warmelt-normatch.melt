	  )
    (debug_msg nlisti "normstep_mflagconj nlisti")
    (debug_msg matflagargs "normstep_mflagconj matflagargs")
    (cond
     ( (<=i matflagnbargs 0)
       (put_fields nsetflag :nstq_exp '0))
